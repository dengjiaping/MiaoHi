<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.haiqiu.miaohi.view.CommonNavigation
        android:id="@+id/cn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:rightText="@string/title_share_right"
        app:titleText="@string/title_share" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_share_video"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:background="@color/color_f1"
            android:scaleType="centerCrop" />

        <com.haiqiu.miaohi.widget.ShareLayout
            android:id="@+id/share_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>


</LinearLayout>
