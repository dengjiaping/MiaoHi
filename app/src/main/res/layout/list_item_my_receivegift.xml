<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color_white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_receive_gift"
        android:layout_width="match_parent"
        android:layout_height="54dp">

        <com.haiqiu.miaohi.view.MyCircleView
            android:id="@+id/iv_myattention_item_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp" />

        <ImageView
            android:id="@+id/iv_isvip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_myattention_item_head"
            android:layout_alignRight="@+id/iv_myattention_item_head"
            android:src="@drawable/svg_vip_little" />

        <TextView
            android:id="@+id/tv_myattention_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/iv_myattention_item_head"
            android:textColor="@color/color_666"
            android:textSize="12dp"
            tools:text="名字" />

        <TextView
            android:id="@+id/present_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/tv_myattention_item_name"
            android:text="送了一个"
            android:textColor="@color/gray_text_1"
            android:textSize="9dp" />

        <TextView
            android:id="@+id/tv_gift_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/present_text"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/present_text"
            android:text=""
            android:textColor="@color/common_blue2"
            android:textSize="9dp" />


        <ImageView
            android:id="@+id/iv_item_mine_receive_gift"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@+id/tv_gift_name"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_myattention_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_myattention_item_name"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/iv_myattention_item_head"
            android:textColor="@color/color_999"
            android:textSize="9dp"
            tools:text="发表时间" />

        <ImageView
            android:id="@+id/iv_item_mine_receive_gift_video"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:scaleType="centerCrop"
            android:src="@color/color_f1" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/color_df" />
    </RelativeLayout>

</LinearLayout>
