<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.haiqiu.miaohi.view.CommonNavigation
            android:id="@+id/cn_activedetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.haiqiu.miaohi.widget.pulltorefreshview.PullToRefreshStaggeredGridView
            android:id="@+id/ptsg_activedetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_activedetailbubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/qipao1"
            android:text="@string/bubble_join_special"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_activedetail_shoot"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/activity_recorder"
            android:visibility="invisible" />
    </LinearLayout>

</RelativeLayout>