<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/linearlayout_mine_tab_selector"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_itemsetting_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:textColor="@color/color_666"
            tools:text="@string/tv_account_bind" />

        <TextView
            android:id="@+id/tv_itemsetting_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/iv_itemsetting_arrow"
            android:layout_toRightOf="@+id/tv_itemsetting_text"
            android:gravity="right"
            android:textColor="@color/color_666"
            android:textSize="10dp"
            tools:text="5" />

        <ImageView
            android:id="@+id/iv_itemsetting_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:src="@drawable/enterarrow" />

    </RelativeLayout>

</LinearLayout>