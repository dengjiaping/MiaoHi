<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_video_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_attentcontent_praise"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="3.5dp"
            android:paddingLeft="7.5dp"
            android:paddingRight="7.5dp"
            android:src="@drawable/selector_prise" />

        <ImageView
            android:id="@+id/iv_attentcontent_comment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="7.5dp"
            android:paddingRight="7.5dp"
            android:src="@drawable/selector_comment" />

        <ImageView
            android:id="@+id/iv_attentcontent_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="7.5dp"
            android:paddingRight="7.5dp"
            android:src="@drawable/selector_attentionshare" />

        <TextView
            android:id="@+id/tv_attentcontent_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="11dp"
            android:textColor="@color/color_999"
            android:textSize="10dp"
            tools:text="5分钟前" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_attentioncontent_describe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="15dp"
        android:textColor="@color/color_1d"
        android:textSize="12dp"
        tools:text="打开app默认进入关注页；下拉页面时手动刷新，刷新时，显示更新内容的数量（包含推荐内容）；刷没有更新的内容时，只刷新现有的数据." />

    <TextView
        android:id="@+id/tv_attentioncontent_praisecount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/attentionpraise"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:textColor="@color/color_1d"
        android:textSize="12dp"
        android:textStyle="bold"
        tools:text="1234" />

    <LinearLayout
        android:id="@+id/ll_attentioncontent_conent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/tv_commont1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="12dp"
            tools:text="sssss" />

        <TextView
            android:id="@+id/tv_commont2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="12dp"
            tools:text="sssss" />

        <TextView
            android:id="@+id/tv_commont3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="12dp"
            tools:text="sssss" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_attentioncontent_commenttotalcount"
        android:layout_width="91dp"
        android:layout_height="21dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape_commenttotalcount"
        android:gravity="center"
        android:text="所有86条评论"
        android:textColor="@color/color_999"
        android:textSize="10dp" />

    <View
        style="@style/common_mini_line_df"
        android:layout_marginTop="15dp" />
</LinearLayout>