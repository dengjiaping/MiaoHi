<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_enter_selector"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp">

        <com.haiqiu.miaohi.view.MyCircleView
            android:id="@+id/iv_head"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/head_default" />

        <ImageView
            android:id="@+id/iv_vip_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_head"
            android:layout_alignRight="@+id/iv_head"
            android:src="@drawable/vip_little"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/iv_head"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxWidth="144dp"
            android:text="用户名"
            android:textColor="@color/color_1d"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_prompt_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/tv_name"
            android:text="围观了映答"
            android:singleLine="true"
            android:textColor="@color/color_c4"
            android:textSize="12dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/iv_video"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop"
            android:src="@color/color_f1" />

        <ImageView
            android:id="@+id/iv_is_video"
            android:layout_width="17dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="21.5dp"
            android:src="@drawable/isvideo"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/iv_video"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="XXX向你提问了一个问题"
            android:textColor="@color/color_1d"
            android:textSize="14dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="10dp"
        android:text="发送时间"
        android:textColor="@color/color_c4"
        android:textSize="9dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="20dp"
        android:background="@color/color_df" />
</LinearLayout>
