<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_extra_control"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent_50"
        android:clickable="true"
        android:gravity="center"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/rl_video_praise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="22dp"
            android:paddingRight="22dp">

            <ImageView
                android:id="@+id/iv_praise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/selector_praise_state" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_praise"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text="Rock一下"
                android:textColor="@color/white"
                android:textSize="15dp" />
        </RelativeLayout>

        <View
            android:id="@+id/vertical_line"
            android:layout_width="0.5dp"
            android:layout_height="74dp"
            android:background="@color/white" />

        <RelativeLayout
            android:id="@+id/rl_video_replay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="32dp"
            android:paddingRight="32dp">

            <ImageView
                android:id="@+id/iv_replay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/bofangchongbo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_replay"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text="重播"
                android:textColor="@color/white"
                android:textSize="15dp" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_top_video_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="11dp"
        android:paddingRight="10dp"
        android:paddingTop="11dp">

        <TextView
            android:id="@+id/tv_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:background="@drawable/shape_20_50_black_corner_rectangle"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="4dp"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:visibility="gone"
            tools:text="#法第三个是施工方过不过分#" />

        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/iv_is_yd"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/qa_black"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_recommend"
            android:layout_width="45dp"
            android:layout_height="18dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/shape_recommend_bg"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:visibility="gone"
            tools:text="推荐" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_bottom_video_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tv_look_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="11dp"
            android:background="@drawable/shape_20_black_corner_rectangle"
            android:drawableLeft="@drawable/bofangbofangliang"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:paddingBottom="1dp"
            android:paddingLeft="1dp"
            android:paddingRight="7dp"
            android:paddingTop="1dp"
            android:textColor="@color/white"
            android:textSize="9dp"
            android:visibility="gone"
            tools:text="法第分" />

        <TextView
            android:id="@+id/tv_video_time_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/shape_20_black_corner_rectangle"
            android:gravity="center"
            android:paddingBottom="1dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="1dp"
            android:textColor="@color/white"
            android:textSize="9dp"
            android:visibility="gone"
            tools:text="09'10''" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_prise_animation"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_centerInParent="true"
        android:src="@drawable/selector_prise_for_pop"
        android:visibility="gone" />

</RelativeLayout>