<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_minelistimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1px"
            android:layout_marginLeft="0.5px"
            android:layout_marginRight="0.5px"
            android:scaleType="centerCrop"
            android:src="@color/color_f1" />

        <ImageView
            android:id="@+id/iv_minelistisvideo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignRight="@+id/iv_minelistimg"
            android:layout_alignTop="@+id/iv_minelistimg"
            android:layout_margin="5dp"
            android:src="@drawable/isvideo" />
    </RelativeLayout>
</RelativeLayout>