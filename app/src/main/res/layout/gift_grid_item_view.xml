<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/right_bottom_view">

    <RelativeLayout
        android:id="@+id/layout_gift_item"
        android:layout_width="wrap_content"
        android:layout_height="108.0dip">

        <RelativeLayout
            android:id="@+id/layout_select_frame"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="gone">

            <View
                android:layout_width="1.0dip"
                android:layout_height="110.0dip"
                android:layout_alignParentLeft="true"
                android:background="#00a0e9" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:layout_alignParentTop="true"
                android:layout_marginRight="1.0dip"
                android:background="#00a0e9" />

            <View
                android:layout_width="1.5dip"
                android:layout_height="110.0dip"
                android:layout_alignParentRight="true"
                android:layout_marginRight="-0.5dip"
                android:background="#00a0e9" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.5dip"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="-0.5dip"
                android:layout_marginRight="1.0dip"
                android:background="#00a0e9" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/tv_gift_item_name">

            <ImageView
                android:id="@+id/img_gift_item_thumb"
                android:layout_width="50.0dip"
                android:layout_height="50.0dip"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:src="@color/color_f1" />
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_gift_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_gift_item_hicoin"
            android:layout_centerInParent="true"
            android:layout_marginBottom="2.0dip"
            android:ellipsize="end"
            android:paddingLeft="7.0dip"
            android:paddingRight="7.0dip"
            android:singleLine="true"
            android:textColor="@color/color_666"
            android:textSize="12.0dip"
            tools:text="肥皂" />

        <TextView
            android:id="@+id/tv_gift_item_hicoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="8dip"
            android:ellipsize="end"
            android:paddingLeft="7.0dip"
            android:paddingRight="7.0dip"
            android:singleLine="true"
            android:textColor="@color/font_color"
            android:textSize="12.0dip"
            tools:text="免费" />
        <ImageView
            android:id="@+id/iv_donate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:src="@drawable/donate"
            android:alpha="0.8"
            android:visibility="visible"/>
    </RelativeLayout>

</RelativeLayout>