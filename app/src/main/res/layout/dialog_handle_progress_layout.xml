<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:clickable="true"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <View
        android:layout_width="1px"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.haiqiu.miaohi.widget.SquareProgressView
        android:id="@+id/square_progress_view"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginLeft="31dp"
        android:layout_marginRight="31dp" />

    <View
        android:layout_width="1px"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tv_handle_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:textSize="30dp"
        tools:text="67%" />

    <TextView
        android:id="@+id/tv_handle_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="6dp"
        android:textColor="@color/white"
        android:textSize="10dp"
        tools:text="正在加工图片..." />

    <TextView
        android:id="@+id/tv_back"
        android:layout_width="150dp"
        android:layout_height="44dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/shape_corners_stroke"
        android:gravity="center"
        android:text="返回上一步"
        android:textColor="@color/selector_wight_gray" />

    <View
        android:layout_width="1px"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>