<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="你可能感兴趣的人"
            android:textColor="@color/color_1d"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_attention_maybeinterestfindmore"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="发现更多"
            android:textColor="@color/blue_darkandlight_selector"
            android:textSize="12dp" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_attention_mabeinterest"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_marginBottom="10dp" />

    <View
        style="@style/common_mini_line_df"
        android:layout_marginLeft="10dp" />
</LinearLayout>