<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_enter_selector"
    android:paddingLeft="11dp">

    <com.haiqiu.miaohi.view.MyCircleView
        android:id="@+id/iv_head"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/head_default" />

    <ImageView
        android:id="@+id/iv_vip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_head"
        android:layout_alignRight="@+id/iv_head"
        android:src="@drawable/vip_little"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="81dp"
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@+id/iv_head"
        android:paddingRight="15dp"
        android:singleLine="true"
        android:text="用户名"
        android:textColor="@color/color_1d"
        android:textSize="13dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_gender"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignTop="@+id/tv_name"
        android:layout_marginLeft="-91dp"
        android:layout_toRightOf="@+id/tv_name"
        android:src="@drawable/gender_man" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"
        android:layout_toLeftOf="@+id/bt_ask"
        android:layout_toRightOf="@+id/iv_head"
        android:singleLine="true"
        android:text="用户头衔"
        android:textColor="@color/color_999"
        android:textSize="10dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bt_ask"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="11dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_attention_blue_selector"
        android:clickable="false"
        android:text="向Ta提问"
        android:textColor="@color/fontblue"
        android:textSize="10dp" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_head"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/iv_head">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/qa_black" />

        <TextView
            android:id="@+id/tv_qa_num"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:text="3345"
            android:textColor="@color/color_1d"
            android:textSize="12dp" />

        <ImageView
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:src="@drawable/circuseecount_little" />

        <TextView
            android:id="@+id/tv_observe_num"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:text="549"
            android:textColor="@color/color_1d"
            android:textSize="12dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/ll"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/iv_head"
        android:background="@color/color_df" />
</RelativeLayout>
