<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <com.haiqiu.miaohi.view.MyCircleView
            android:id="@+id/mcv_askmeheader"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/head_default" />

        <TextView
            android:id="@+id/tv_askmename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/mcv_askmeheader"
            tools:text="邪恶与天使的故事"
            android:textColor="@color/font_color"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/iv_askmepublicstate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/svg_qaprivate" />

        <ImageView
            android:id="@+id/iv_adkme_vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/mcv_askmeheader"
            android:layout_alignRight="@+id/mcv_askmeheader"
            android:src="@drawable/vip_little"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_askmequestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        tools:text="防晒霜"
        android:textColor="@color/color_666"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tv_askmeuploadfail"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="上传失败"
        android:textColor="@color/red_text"
        android:textSize="11dp"
        android:visibility="invisible" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="15dp">

        <TextView
            android:id="@+id/tv_askmepastduetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            tools:text="还有25小时过期"
            android:textColor="@color/font_color"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_askmeask"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/selector_drafs_btn"
            android:gravity="center"
            android:minWidth="80dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:text="@string/tv_answer"
            android:textColor="@color/white"
            android:textSize="13dp" />
    </RelativeLayout>

    <View
        style="@style/HorizontalLine"
        android:background="@color/color_df" />
</LinearLayout>