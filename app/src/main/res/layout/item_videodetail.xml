<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_itemcommendhead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <com.haiqiu.miaohi.view.MyCircleView
            android:id="@+id/mcv_videodetailcomment_header"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="11dp"
            android:src="@drawable/head_default" />

        <ImageView
            android:id="@+id/iv_videodetail_commentvip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/mcv_videodetailcomment_header"
            android:layout_alignRight="@+id/mcv_videodetailcomment_header"
            android:src="@drawable/vip_little" />

        <LinearLayout
            android:id="@+id/ll_itemvideodetail_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/mcv_videodetailcomment_header"
            android:minHeight="35dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_videodetailcomment_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/color_1d"
                android:textSize="12dp"
                android:textStyle="bold"
                tools:text="运动加" />

            <TextView
                android:id="@+id/tv_videodetailcomment_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="11dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/color_1d"
                android:textSize="12dp"
                tools:text="这也太酷了吧。。。" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_videodetail_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ll_itemvideodetail_content"
            android:layout_below="@+id/ll_itemvideodetail_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/color_c4"
            android:textSize="10dp"
            tools:text="刚刚" />

        <View
            style="@style/common_mini_line_d6"
            android:layout_alignLeft="@+id/tv_videodetail_time"
            android:layout_below="@+id/tv_videodetail_time"
            android:layout_marginTop="15dp" />

    </RelativeLayout>

</RelativeLayout>